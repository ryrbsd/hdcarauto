<!--qtypes#show-->
<link rel="stylesheet" type="text/css" href="/css/products.css">
<div class="leftmenu">
    <h5><%= @type.name%></h5>
    <hr class="hr">
    <ul>
        <% counter = 1%>
        <% @papers.each do |paper| %>
        <li>
            <% if counter == 1%>
                <%= link_to(paper.title, service_case_path(:id => paper.id), id: "first_field", class: "typeslink") %>
            <% else %>
                <%= link_to(paper.title, service_case_path(:id => paper.id), class: "typeslink") %>
            <% end %>
            
        </li>
        <% counter += 1%>
        <% end %>
        

    </ul>
</div>
<div class="rightproducts">
    <div class="title">
        <h6><%= @firstpaper.title if @firstpaper%></h6>
        <hr class="righthr">
    </div>
    <div class="text-field"><%= @firstpaper.text.html_safe if @firstpaper%></div>
    
    
</div>


<style type="text/css">
	.producttitle {
    color: #211c19;
    font-size: 20px;
  }
  .colorchange,.copyright {
      bottom: -60px !important;
  }

</style>
